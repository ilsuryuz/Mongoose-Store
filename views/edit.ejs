<!DOCTYPE html>
<html lang="en">
<!-- Head Element -->
<%- include('./partials/head.ejs')%>

    <body>
        <div class="top">
            <h1>Edit Product</h1>
        </div>
        <div class="form">
            <form action="/store/<%=product._id%>?_method=PUT" method="POST">
                <div class="inputs">
                    <label for="name">Name: </label>
                    <input type="text" name="name" placeholder="NAME" value="<%=product.name%>"/><br />
                </div>
                <div class="inputs">
                    <label for="img">Image Link: </label>
                    <input type="text" name="img" placeholder="IMAGE" value="<%=product.img%>"/><br />
                </div>
                <div class="inputs">
                    <label for="description">Description: </label>
                    <input type="text" name="description" placeholder="DESCRIPTION" value="<%=product.description%>"/><br />
                </div>
                <div class="inputs">
                    <label for="price">Price: </label>
                    <input type="number" name="price" placeholder="PRICE" value="<%=product.price%>"/><br />
                </div>
                <div class="inputs">
                    <label for="qty">Quantity: </label>
                    <input type="number" name="qty" value="<%=product.qty%>" /><br />
                </div>
                <input type="submit" name="" value="Submit Changes" />
            </form>
        </div>
        <%- include('./partials/footer.ejs')%>
    </body>

</html>