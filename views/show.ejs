<!DOCTYPE html>
<html lang="en">
<!-- Head Element -->
<%- include('./partials/head.ejs')%>

    <body>
        <div class="top">
            <form action="/store">
                <input type="submit" value="Back to Store" />
            </form>
        </div>
        <div class="product">
            <div class="subProduct">
                <h1>
                    <%=product.name %>
                </h1>
                <img src="<%=product.img%>" alt="<%=product.name%>">
                <p>
                    <%= product.description%>
                </p>
                <h4>Cost: <%=product.price%>
                </h4>
                <% if (product.qty <=0) { %>
                    <h4 id="outOfStock">Out of stock</h4>
                    <% } else { %>
                        <h4>
                            <%=product.qty%> in stock
                        </h4>
                        <form action="/store/<%=product._id%>/buy?_method=PUT" method="POST">
                            <input type="submit" value="BUY" />
                        </form>
                        <% } %>
                        <div class="productButtons">
                            <form action="/Store/<%=product._id%>/edit">
                                <input type="submit" value="Edit Product" />
                            </form>
                            <form action="/store/<%=product._id%>?_method=DELETE" method="POST">
                                <input type="submit" value="DELETE" />
                            </form>
                        </div>
            </div>
        </div>
        <%- include('./partials/footer.ejs')%>
    </body>

</html>