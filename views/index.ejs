<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title></title>
</head>

<body>
    <div>
        <div>
            <h1>Products index page</h1>
            <nav>
                <form action="/store/new">
                    <input type="submit" value="Add Product" />
                </form>
            </nav>
        </div>
        <div>
            <% products.forEach(product=> { %>
                <a href="/store/<%=product._id; %>">
                    <div>
                        <h3>
                            <%=product.name; %>
                        </h3>
                        <img src="<%=product.img%>" alt="<%=product.name%>">
                        <ul>
                            <% if (product.qty <=0) { %>
                                <li>
                                    Out of stock
                                </li>
                                <li>
                                    <%=product.price%> V-Bucks
                                </li>
                                <% } else { %>
                                    <li>
                                        <%=product.qty%> in stock
                                    </li>
                                    <li>
                                        <%=product.price%> V-Bucks
                                    </li>
                                    <li>
                </a>
                <form action="/store/<%=product._id%>/buy?_method=PUT" method="POST">
                    <input type="submit" value="BUY" />
                </form>
                </li>
                <% } %>
                    </ul>
        </div>
        <% }) %>
    </div>
</body>

</html>