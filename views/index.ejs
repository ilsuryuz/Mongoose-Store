<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8" />
    <title></title>
</head>

<body>
    <div>
    <nav>
        <a href="/store/new">Add a New Product</a>
    </nav>
    <div>
        <h1>Products index page</h1>
    </div>
    <div>
        <% products.forEach(product=> { %>
            <a href="/store/<%=product._id; %>">
                <div>
                    <h3>
                        <%=product.name; %>
                    </h3>
                    <img src="<%=product.img%>" alt="<%=product.name%>">
                    <ul>
                        <li>
                            <%=product.qty%> in stock
                        </li>
                        <li>
                            <%=product.price%> V-Bucks
                        </li>
                    </ul>
            </a>
            <form action="/store//">
                <input type="submit" value="BUY" />
              </form>
    </div>
    <% }) %>
        </div>
</body>

</html>